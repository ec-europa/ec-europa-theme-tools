      'right_header' => t('Right Header'),
      'bottom_header' => t('Bottom Header'),
      'top' => t('Top'),
      'central' => t('Main'),
    ],
    'form' => TRUE,
    'image' => TRUE,
    'is_nexteuropa' => TRUE,
